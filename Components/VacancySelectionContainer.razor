@*Библиотеки*@
@using static EasyToEnter.ASP.Tools.StringConverting
@using EasyToEnter.ASP.ViewsModels.Applicant;
@using Microsoft.AspNetCore.Http



@*Api*@
@inject EasyToEnter.ASP.Services.Favorites.IVacancyFavoritesService VacancyFavoritesService;



@if (!Model.Any())
{
    <div class="icon-card mb-3 text-dark bg-white shadow rounded-20 text-center p-2">
        По вашему поисковому запросу ничего не нашлось.
    </div>
}
else for(var i = 0; i < Model.Count; i++)
{
    VacancyFavoritesViewModel vacancyFavorites = Model[i];

    <div class="icon-card mb-3 text-dark bg-white shadow rounded-20">
        <div class="row g-0">
            <div class="col position-relative">
                <div class="card-body p-3">
                    <div class="row px-3 mb-3">

                        @*Хедер*@
                        <p class="col m-0 p-0 card-text text-truncate">
                            <small class="text-muted">
                                @vacancyFavorites.Vacancy.OrganizationModel!.Name
                            </small>
                        </p>

                        @*Значек "В избранное"*@
                        <a class="col-auto m-0 p-0 ml-4 align-self-end" 
                            data-bs-placement="top" 
                            data-bs-toggle="tooltip" 
                            href="" @onclick:preventDefault @onclick="(() => ChangeStatusFavorites(vacancyFavorites))">

                            @if (vacancyFavorites.Favorites)
                            {
                                <span class="fs-5 bi bi-heart-fill text-danger"/>
                            }
                            else
                            {
                                <span class="fs-5 bi bi-heart text-danger"/>
                            }
                        </a>
                    </div>

                    @*Значек "Тайтл"*@
                    <h5 class="card-title text-truncate text-dark fw-bold">
                         @vacancyFavorites.Vacancy.Name
                    </h5>

                    @*Значек "Описание"*@
                    <p class="card-text text-truncate mb-2 text-wrap">
                        @vacancyFavorites.Vacancy.Description
                    </p>

                    @*Значек "Особенности"*@
                    <p class="card-text text-truncate">
                        <small class="text-muted">
                            @vacancyFavorites.Vacancy!.ProfessionModel!.Name
                        </small>
                    </p>

                    <div class="row px-3">
                        <div class="col-sm order-sm-first order-4 px-0">
                            <a class="btn text-truncate btn-secondary text-decoration-none col col-sm-auto" href="#">
                                Связаться
                            </a>
                        </div>
                        <div class="col-sm-auto order-1 order-xl-3 align-self-center">
                            <p class="text-center m-0">
                                <span class="fs-6 fw-bold text-truncate">@IntToString(@vacancyFavorites.Vacancy.Wages)</span> рублей
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

@code {

    [Parameter]
    public List<VacancyFavoritesViewModel> Model { get; set; } = new ();

    private async Task ChangeStatusFavorites(VacancyFavoritesViewModel vacancyFavorites)
    {
        if (vacancyFavorites.Favorites)
        {
            var resultDelete = await VacancyFavoritesService.DeleteFavorites(vacancyFavorites.Vacancy);

            if (resultDelete == true) vacancyFavorites.Favorites = false;
        }
        else
        {
            var resultAdd = await VacancyFavoritesService.AddFavorites(vacancyFavorites.Vacancy);

            if (resultAdd == true) vacancyFavorites.Favorites = true;
        }
    }
}