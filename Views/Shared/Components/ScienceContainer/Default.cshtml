@model EasyToEnter.ASP.ViewsModels.Applicant.ScienceSelectionContainerViewModel;
@using EasyToEnter.ASP.ViewsModels.Applicant;

<div class="container mt-3">
    <div class="row">
@for(var i = 0; i < Model.ScienceList.Count; i++)
{
        ScienceSelectionCardViewModel data = new(Model.ScienceList[i]!, @Model.LevelFocusCollection.Where(l => l.FocusModel!.DirectionModel!.GroupModel!.ScienceModel!.Id == Model.ScienceList[i]!.Id).Count());
        <vc:science-card data="@data"/>
}
    </div>
</div>