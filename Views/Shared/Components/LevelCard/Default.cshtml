@model EasyToEnter.ASP.ViewsModels.Applicant.LevelSelectionCardViewModel;

@*ПРИМЕР начало*@
<div class="mb-3 text-dark bg-white shadow rounded-3">
    <div class="row g-0">
        <div class="col position-relative">
            <div class="card-body p-3">
                <div class="row px-3 mb-3">
                    <h5 class="col m-0 p-0 card-title text-truncate">
                        <a class="text-decoration-none text-dark fw-bold" href="/Applicant/ScienceSelection?level=@Model.Level.Id">
                            @Model.Level.Name
                        </a>
                    </h5>
                    <a class="col-auto m-0 p-0 align-self-end" href="#">
                        <span class="fs-5 bi bi-bookmark-plus text-muted"/>
                    </a>
                </div>
                <p class="card-text text-truncate">
                    @Model.Level.Description
                </p>
                <div class="row px-3">
                    <a class="col-3 btn m-0 text-truncate btn-secondary text-decoration-none" href="/Applicant/ScienceSelection?level=@Model.Level.Id">
                        <span class="fs-5 fw-bold">
                            @Model.VariabilityCount
                        </span>
                            варианта обучения
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
@*ПРИМЕР конец*@