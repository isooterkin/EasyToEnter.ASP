@model EasyToEnter.ASP.ViewsModels.Applicant.DirectionSelectionCardViewModel;

@*ПРИМЕР начало*@
<div class="mb-3 text-dark bg-light shadow rounded-3">
    <div class="row g-0">
        <div class="col position-relative">
            <div class="card-body p-3">
                <div class="row px-3 mb-3">
                    <p class="col m-0 p-0 card-text text-truncate">
                        <small class="text-muted">
                            @Model.FullCodeName
                        </small>
                    </p>
                    <a class="col-auto m-0 p-0 align-self-end" href="#">
                        <span class="fs-5 bi bi-bookmark-plus text-muted"/>
                    </a>
                </div>
                <h5 class="card-title text-truncate">
                    <a class="text-decoration-none text-dark fw-bold" href="/Applicant/FocusSelection?level=@Model.LevelId&direction=@Model.Direction.Id">
                        @Model.Direction.Name
                    </a>
                </h5>
                <p class="card-text text-truncate">
                    @Model.Direction.Description
                </p>
                <div class="row px-3">
                    <a class="col-3 btn m-0 text-truncate btn-secondary text-decoration-none" href="/Applicant/FocusSelection?level=@Model.LevelId&direction=@Model.Direction.Id">
                        <span class="fs-5 fw-bold">
                            @Model.VariabilityCount
                        </span> 
                        варианта обучения
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
@*ПРИМЕР конец*@