@model EasyToEnter.ASP.ViewsModels.Applicant.FocusSelectionCardViewModel;

<div class="card bg-dark text-white mb-3 rounded-3 shadow" style="background-color: #333;">
    <div class="card-body">
        <h3 class="card-title">
            @Model.Focus.Name
        </h3>
        <p class="card-text">
            @Model.Focus.Description
        </p>
        <div class="col p-0 ">
            <a href="/Applicant/FocusUniversitySelection?focus=@Model.Focus.Id" class="btn btn-light">
                @Model.FocusUniversityCount вариантов обучения
            </a>
        </div>
    </div>
</div>