@model EasyToEnter.ASP.ViewsModels.Authentication.SingUpViewModel;

@{
    ViewData["Title"] = "Регистрация";
}

<link rel="stylesheet" href="~/theme/SingIn/dist/icons/material-design-icons/css/mdi.min.css" type="text/css">
<link rel="stylesheet" href="~/theme/SingIn/dist/css/latform-style-3.min.css" type="text/css">

<div class="form-wrapper">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 d-none d-lg-inline">
                <figure class="mb-5">
                    <img class="img-fluid" src="~/image/student-2.svg" alt="">
                </figure>
                <p class="text-center">Уже есть аккаунт? <a asp-controller="Authentication" asp-action="Login">Войти</a>.</p>
            </div>
            <div class="col-lg-4 offset-lg-2 pt-4">
                <div class="my-5 text-center text-lg-left">
                    <h3 class="font-weight-bold mb-3">Регистрация</h3>
                    <p class="text-muted">Ты можешь создать аккаунт совершенно бесплатно</p>
                </div>
                <div class="card" style="border-radius: 20px;">
                    <div class="card-body">
                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="form-group mb-1">
                                <label for="login">Логин</label>
                                <div class="form-icon-wrapper">
                                    <input asp-for="Login" type="text" class="form-control" id="login" placeholder="Введите логин" autofocus required>
                                    <i class="form-icon-left mdi mdi-account"></i>
                                </div>
                                <div class="mt-2">
                                    <span asp-validation-for="Login" class="text-danger mt-2"></span>
                                </div>
                            </div>
                            
                            <div class="form-group mb-1">
                                <label for="email">Почта</label>
                                <div class="form-icon-wrapper">
                                    <input asp-for="EmailAddress" type="email" class="form-control" id="email" placeholder="Введите почту">
                                    <i class="form-icon-left mdi mdi-email"></i>
                                </div>
                                <div class="mt-2">
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="form-group mb-1">
                                <label for="password">Пароль</label>
                                <div class="form-icon-wrapper">
                                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Введите пароль" required>
                                    <i class="form-icon-left mdi mdi-lock"></i>
                                    <a href="#" class="form-icon-right password-show-hide">
                                        <i class="mdi mdi-eye"></i>
                                    </a>
                                </div>
                                <div class="mt-2">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="form-group mb-1">
                                <label for="password-repeat">Повторите пароль</label>
                                <div class="form-icon-wrapper">
                                    <input asp-for="PasswordRepeat" type="password" class="form-control" id="password-repeat" placeholder="Введите пароль" required>
                                    <i class="form-icon-left mdi mdi-lock"></i>
                                    <a href="#" class="form-icon-right password-show-hide">
                                        <i class="mdi mdi-eye"></i>
                                    </a>
                                </div>
                                <div class="mt-2">
                                    <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="text-center">
                                <button type="submit" class="btn btn-block btn-primary">Зарегистрироваться</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

