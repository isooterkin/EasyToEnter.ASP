@model EasyToEnter.ASP.ViewsModels.Applicant.VariabilitySelectionContainerViewModel;

@{
    ViewData["Title"] = "Вырианты обучения";
}

<div class="text-center m-3">
    <h2>Вырианты обучения</h2>
</div>

<!-- Фильтры -->
<form method="get">
    <div class="container">
        <div class="row">
            <!-- Предыдущие значения -->
            <input type="hidden" name="levelFocus" asp-for="LevelFocusId"/>

            <h4>Поиск вариативности</h4>
            <!-- Вариативность -->
            <!-- Форма обучания -->
            <select name="form" class="col-sm-3 select_send_ajax selectpicker" data-show-subtext="true" data-live-search="true" asp-items="Model.FormSelectList">
                <option value=@null>Форма обучания</option>
            </select>
            <!-- Формат обучения -->
            <select name="format" class="col-sm-3 select_send_ajax selectpicker" data-show-subtext="true" data-live-search="true" asp-items="Model.FormatSelectList">
                <option value=@null>Формат обучения</option>
            </select>
            <!-- Оплата обучения -->
            <select name="payment" class="col-sm-3 select_send_ajax selectpicker" data-show-subtext="true" data-live-search="true" asp-items="Model.PaymentSelectList">
                <option value=@null>Оплата обучения</option>
            </select>
            <!-- Стоимость обучения -->
@*            <select name="tuition" class="col-sm-3 select_send_ajax selectpicker" data-show-subtext="true" data-live-search="true">
                <option value=@null>Оплата обучения</option>
            </select>*@
            <!-- Проходной балл -->
@*            <select name="passingGrade" class="col-sm-3 select_send_ajax selectpicker" data-show-subtext="true" data-live-search="true">
                <option value=@null>Оплата обучения</option>
            </select>*@
            <!-- Вступительные экзамены -->
            <select name="entranceExams" class="col-sm-3 select_send_ajax selectpicker" data-show-subtext="true" data-live-search="true" asp-items="Model.EntranceExamsSelectList">
                <option value=@null>Вступительные экзамены</option>
            </select>

            <!-- ВУЗ -->
            @*<h4 class="mt-3">Поиск вуза</h4>*@
            <!-- Аккредитация -->
            <select name="accreditation" class="col-sm-3 select_send_ajax selectpicker" data-show-subtext="true" data-live-search="true">
                <option value=@null>Аккредитация</option>
            </select>
            <!-- Военная кафедра -->
            <select name="militaryDepartment" class="col-sm-3 select_send_ajax selectpicker" data-show-subtext="true" data-live-search="true">
                <option value=@null>Военная кафедра</option>
            </select>
            <!-- Общежитие -->
            <select name="dormitory" class="col-sm-3 select_send_ajax selectpicker" data-show-subtext="true" data-live-search="true">
                <option value=@null>Общежитие</option>
            </select>
            <!-- Специализация -->
            <select name="specializationUniversity" class="col-sm-3 select_send_ajax selectpicker" data-show-subtext="true" data-live-search="true">
                <option value=@null>Специализация</option>
            </select>

            <h4 class="mt-3"/>

            <!-- Район -->
            <select name="region" class="col-sm-3 select_send_ajax selectpicker" data-show-subtext="true" data-live-search="true">
                <option value=@null>Район</option>
            </select>
            <!-- Город -->
            <select name="city" class="col-sm-3 select_send_ajax selectpicker" data-show-subtext="true" data-live-search="true">
                <option value=@null>Город</option>
            </select>
        </div>
    </div>
</form>

<vc:variability-container data="@Model"/>

<!-- Отправка формы при клике на select-->
@section Scripts 
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $('.select_send_ajax').on('change', function() 
        {
            $(this.form).submit();
        });
    </script>
}