@model EasyToEnter.ASP.ViewsModels.Applicant.VacancySelectionContainerViewModel;
@using EasyToEnter.ASP.ViewsModels.Components;
@using EasyToEnter.ASP.ViewsModels.Components.Path;
@using EasyToEnter.ASP.ViewsModels.Applicant;
@using EasyToEnter.ASP.Models.Models;
@using System.Text.Json.Serialization;
@using Newtonsoft.Json;

@{
    ViewData["Title"] = "Выбор вакансии";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>



<script>
    $( function() {
        $( "#slider-range" ).slider({
        range: true,
        min: @Model.MinWages,
        max: @Model.MaxWages,
        values: [ @Model.SelectMinWages, @Model.SelectMaxWages ],
        slide: function( event, ui ) {
        $( "#amount" ).val(ui.values[ 0 ] + "-" + ui.values[ 1 ]);
        }
    });
    
    $( "#amount" ).val($( "#slider-range" ).slider( "values", 0 ) +
        "-" + $( "#slider-range" ).slider( "values", 1 ) );
    } );
</script>


@*Контейнер начало*@
<div class="container p-0">
    <div class="row">
        <div class="col-xl-8 col-md-12 order-xl-first order-last">
            @{
                string ModelJson = JsonConvert.SerializeObject(Model.VacancyFavoritesViewModelList, Formatting.None, new JsonSerializerSettings(){ ReferenceLoopHandling = ReferenceLoopHandling.Ignore});
                List<VacancyFavoritesViewModel>? ModelNotJson = System.Text.Json.JsonSerializer.Deserialize<List<VacancyFavoritesViewModel>>(ModelJson);
            }

            <component type="typeof(VacancySelectionContainer)" render-mode="ServerPrerendered" param-Model="ModelNotJson"/>
        </div>
        @*Фильтр начало*@
        <div class="col-xl col-md-12 mb-3 order-xl-last order-first">
            <div class="col bg-white shadow px-3 rounded-20 pb-2">
                <div class="col position-relative">
                    <div class="row">
                        <div class="col p-0 my-1 text-center">
                            Фильтры
                        </div>
                        <a class="col-auto m-0 p-0 align-self-end d-block d-xl-none text-decoration-none" data-toggle="collapse" aria-expanded="true" aria-controls="collapseExample" href="#collapseExample">
                            <span class="fs-5 bi bi-sliders text-muted"/>
                        </a>
                    </div>
                </div>
                <div class="collapse dont-collapse-sm pb-2" id="collapseExample">
                    <div class="well">
                        <!-- Фильтры -->
                        <form method="get">
                            <div class="container p-0">
                                <div class="row">
                                    <vc:select data='@new SelectViewModel("profession", "Профессия", Model.ProfessionSelectListItem)'/>
                                    
                                    <div class="px-3">
                                        <div class="mb-2 px-1">
                                            <small>
                                                Зарплата
                                            </small>
                                            <input type="text" id="amount" name="range" class="fw-bold small text-muted border-0 bg-white">
                                        </div>
                                        <div class="px-1">
                                            <div id="slider-range"></div>
                                        </div>
                                    </div>

                                    <div class="px-3 pt-3">
                                        <button class="btn btn-outline-secondary w-100" type="submit">Применить</button>
                                    </div>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        @*Фильтр конец*@
    </div>
</div>
@*Контейнер конец*@

<!-- Отправка формы при клике на select-->
@section Scripts 
{
    <script>
        $('.select_send_ajax').on('change', function() 
        {
            $(this.form).submit();
        });
    </script>
}